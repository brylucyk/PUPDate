<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/theme_primary</item>
    </style>

    <style name="dateTimeStyle" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="activityStyle" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/theme_primary</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">30dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/theme_secondary</item>
    </style>

    <style name="RatingBarDisabled" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/theme_primary</item>
    </style>

</resources>